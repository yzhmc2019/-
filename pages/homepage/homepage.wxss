/* pages/homepage/homepage.wxss */
page{
  height: 100%;
  background: #f2f2f2;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch; 
}
.banner{
  width: 100%;
  height: 421rpx;
}
.banner image{
  width: 100%;
  height: 100%;
   
}
.swiperContainer{
  height: 378rpx;
  position: relative;
}
swiper{
  height: 426rpx;
  position: relative;
  top: -48rpx;
}
.swiperItemContainer{
  display: flex;
  /* align-items: center; */
  flex-direction: column;
  justify-content: center;
  margin-top: 14rpx;
}
.swiperItem{
  width: 600rpx;
  height: 335rpx;
  background: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.swiperItem image{
  width: 563rpx;
  height: 301rpx;
}
.pswiperItem{
  height: 335rpx;
}
.pswiperItem.active{
  height: 426rpx !important;
}
.pswiperItem.active .swiperItemContainer{
  margin-top: 0;
}
.swiperDesc{
  width: 600rpx;
  background: #ffffff;
  height: 0;
  opacity: 0;
  transition: all 0.2s linear 0s;
}
.pswiperItem.active .swiperDesc{
  height: 91rpx;
  opacity: 1;
}
.swiperDesc .content{
  width: 563rpx;
  height: 100%;
  margin: 0 auto;
  padding-bottom: 18rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.swiperDesc .title .text{
  font-size: 29rpx;
  color: #383838;
  max-width: 380rpx;
  display: block;
}
.more{
  width: 180rpx;
  height: 52rpx;
  position: relative;
  text-align: center;
  line-height: 52rpx;
  font-size: 24rpx;
  color: #383838;
}
.more image{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.dotC{
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
.dot{
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background: #ffffff;
  margin: 0 5rpx;
}
.dot.active{
  width: 39rpx;
}
.dot.active .redDot{
  width: 39rpx;
  height: 12rpx;
  background: #d90710;
  border-radius: 6rpx;
}
.listTitle{
  font-size: 33rpx;
  color: #383838;
  text-align: center;
  font-weight: bold;
  margin-top: 33rpx;
  margin-bottom: 12rpx;
}
.listItem{
  width: 100%;
  height: 364rpx;
  background: #ffffff;
  margin-bottom: 30rpx;
  position: relative;
}
.listItem image{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.listMore{
  position: absolute;
  font-size: 24rpx;
  color: #808285;
  right: 27rpx;
  bottom: 13rpx;
}