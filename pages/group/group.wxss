/* pages/group/group.wxss */
page{
  height: 100%;
  background: #f2f2f2;
  -webkit-overflow-scrolling: touch; 
}
.groupContainer{
  height: 100%;
  padding-top: 40rpx;
  box-sizing: border-box;
  overflow-y: scroll;
}
.groupList{
  height: 255rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: flex-end;
}
.groupItem{
  width: 697rpx;
  position: relative;
  height: 255rpx;
}
.groupListbg{
  position: absolute;
  width: 100%;
  height: 100%;
}
.groupContent{
  position: relative;
  width: 100%;
  display: flex;
  align-items: flex-end;
  top: 50%;
  transform: translateY(-50%);
}
.groupContent .iw{
  width: 194rpx;
  height: 194rpx;
  border-radius: 17rpx;
  overflow: hidden;
  margin-left: -26rpx;
}
.groupContent .iw image{
  width: 100%;
  height: 100%;
}
.groupContent .content{
  width: 439rpx;
  margin-left: 26rpx;
  height: 167rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.groupContent .content .title{
  font-size: 33rpx;
  color: #383838;
  font-weight: bold;
}
.groupContent .content .desc{
  color: #6D6E71;
  font-size: 24rpx;
  /* margin-top: 16rpx; */
}
.groupContent .content .join{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.members{
  color: #B8BABC;
  font-size: 24rpx;
}
.joinBtn{
  width: 177rpx;
  height: 50rpx;
  position: relative;
  line-height: 50rpx;
  text-align: center;
  color: #ffffff;
  font-size: 24rpx;
  margin-top: 15rpx;
}
.joinBtn image{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.joinBtn text{
  position: relative;
}